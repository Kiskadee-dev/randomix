<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <path
                android:name="range"
                android:pathData="M 10 8 L 6 8 L 12 2 L 18 8 L 14 8 L 14 16 L 18 16 L 12 22 L 6 16 L 10 16 L 10 8 Z"
                android:fillColor="?attr/colorPrimary"
                android:strokeColor="?attr/colorPrimary"/>
        </vector>
    </aapt:attr>
    <target android:name="range">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="1000"
                    android:valueFrom="M 10 8 L 6 8 L 12 2 L 18 8 L 14 8 L 14 16 L 18 16 L 12 22 L 6 16 L 10 16 L 10 8 Z"
                    android:valueTo="M 6 8 L 6 8 L 12 0.875 L 18 8 L 18 8 L 18 16 L 18 16 L 12 23.172 L 6 16 L 6 15.887 L 6 8.225 Z"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="pathData"
                    android:startOffset="1000"
                    android:duration="500"
                    android:valueFrom="M 6 8 L 6 8 L 12 0.875 L 18 8 L 18 8 L 18 16 L 18 16 L 12 23.172 L 6 16 L 6 15.887 L 6 8.225 Z"
                    android:valueTo="M 10 8 L 6 8 L 12 2 L 18 8 L 14 8 L 14 16 L 18 16 L 12 22 L 6 16 L 10 16 L 10 8 Z"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeWidth"
                    android:startOffset="300"
                    android:duration="700"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeWidth"
                    android:startOffset="1000"
                    android:duration="500"
                    android:valueFrom="1"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="fillAlpha"
                    android:startOffset="500"
                    android:duration="500"
                    android:valueFrom="1"
                    android:valueTo="0.6"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="fillAlpha"
                    android:startOffset="400"
                    android:duration="100"
                    android:valueFrom="1"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="fillAlpha"
                    android:startOffset="1000"
                    android:duration="300"
                    android:valueFrom="0.6"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
