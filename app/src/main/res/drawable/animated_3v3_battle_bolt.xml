<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <group
                android:name="circle_group"
                android:pivotX="12"
                android:pivotY="12">
                <path
                    android:name="circle"
                    android:pathData="M 12 2 C 9.349 2 6.804 3.054 4.929 4.929 C 3.054 6.804 2 9.349 2 12 C 2 14.651 3.054 17.196 4.929 19.071 C 6.804 20.946 9.349 22 12 22 C 13.755 22 15.48 21.538 17 20.66 C 18.52 19.783 19.783 18.52 20.66 17 C 21.538 15.48 22 13.755 22 12 C 22 10.245 21.538 8.52 20.66 7 C 19.783 5.48 18.52 4.217 17 3.34 C 15.48 2.462 13.755 2 12 2 Z"
                    android:fillColor="?attr/colorPrimary"
                    android:fillAlpha="0"
                    android:strokeWidth="1"/>
            </group>
            <group
                android:name="bolt_group"
                android:pivotX="12"
                android:pivotY="12">
                <path
                    android:name="bolt"
                    android:pathData="M 11 15 L 6 15 L 13 1 L 13 9 L 18 9 L 11 23 L 11 15 Z"
                    android:fillColor="?attr/colorPrimary"
                    android:strokeColor="?attr/colorPrimary"
                    android:strokeAlpha="0.3"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="bolt">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="pathData"
                    android:duration="400"
                    android:valueFrom="M 11 15 L 11 15 L 6 15 L 13 1 L 13 9 L 18 9 L 11 23 L 11 15"
                    android:valueTo="M 13.954 12.969 L 13.954 12.969 L 6 15 L 13 1 L 10.138 12.092 L 18 9 L 11 23 L 13.954 12.969"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="pathData"
                    android:startOffset="400"
                    android:duration="600"
                    android:valueFrom="M 11 23 L 13.954 12.969 L 13.954 12.969 L 6 15 L 13 1 L 10.138 12.092 L 18 9 L 11 23"
                    android:valueTo="M 10.739 18.1 L 7.452 13.213 L 7.403 13.14 L 13 1 L 13.326 6.65 L 16.042 12.949 L 11 23 L 10.739 18.1"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="pathData"
                    android:startOffset="1000"
                    android:duration="500"
                    android:valueFrom="M 11 23 L 10.739 18.1 L 7.403 13.14 L 7.424 13.095 L 13 1 L 13.326 6.65 L 16.042 12.949 L 11 23"
                    android:valueTo="M 11 23 L 11 15 L 11 15 L 6 15 L 13 1 L 13 9 L 18 9 L 11 23"
                    android:valueType="pathType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeWidth"
                    android:startOffset="200"
                    android:duration="500"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="strokeWidth"
                    android:startOffset="700"
                    android:duration="500"
                    android:valueFrom="1"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="circle">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="fillAlpha"
                    android:startOffset="200"
                    android:duration="600"
                    android:valueFrom="0"
                    android:valueTo="0.5"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="fillAlpha"
                    android:startOffset="800"
                    android:duration="400"
                    android:valueFrom="0.5"
                    android:valueTo="0"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="circle_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:startOffset="200"
                    android:duration="703"
                    android:valueFrom="0.2"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:startOffset="200"
                    android:duration="703"
                    android:valueFrom="0.2"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
    <target android:name="bolt_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:startOffset="100"
                    android:duration="400"
                    android:valueFrom="1"
                    android:valueTo="0.7"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:startOffset="100"
                    android:duration="400"
                    android:valueFrom="1"
                    android:valueTo="0.7"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:startOffset="500"
                    android:duration="200"
                    android:valueFrom="0.7"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:startOffset="500"
                    android:duration="200"
                    android:valueFrom="0.7"
                    android:valueTo="1"
                    android:valueType="floatType"
                    android:interpolator="@android:interpolator/fast_out_slow_in"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
