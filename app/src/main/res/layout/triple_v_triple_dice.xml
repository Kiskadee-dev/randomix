<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/diceZone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/linear_vertical_margin"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_button_height"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/diceButtonAnimation1"
            android:layout_width="@dimen/image_button_height"
            android:layout_height="@dimen/image_button_height"
            android:layout_weight="1"
            android:contentDescription="@string/throw_dice"
            android:src="@drawable/dice_1_vector_animation" />

        <ImageView
            android:id="@+id/diceButtonAnimation2"
            android:layout_width="@dimen/image_button_height"
            android:layout_height="@dimen/image_button_height"
            android:layout_weight="1"
            android:contentDescription="@string/throw_dice"
            android:src="@drawable/dice_1_vector_animation" />

        <ImageView
            android:id="@+id/diceButtonAnimation3"
            android:layout_width="@dimen/image_button_height"
            android:layout_height="@dimen/image_button_height"
            android:layout_weight="1"
            android:contentDescription="@string/throw_dice"
            android:src="@drawable/dice_1_vector_animation" />

    </LinearLayout>

    <ImageView
        android:id="@+id/diceButtonAnimationVs"
        android:layout_width="@dimen/max_size_icon_small"
        android:layout_height="@dimen/max_size_icon_small"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/linear_vertical_margin"
        android:contentDescription="@string/three_v_three"
        android:src="@drawable/animated_3v3_battle_bolt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_button_height"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/diceButtonAnimation4"
            android:layout_width="@dimen/image_button_height"
            android:layout_height="@dimen/image_button_height"
            android:layout_marginTop="@dimen/linear_vertical_margin"
            android:layout_weight="1"
            android:contentDescription="@string/throw_dice"
            android:src="@drawable/dice_1_vector_animation" />

        <ImageView
            android:id="@+id/diceButtonAnimation5"
            android:layout_width="@dimen/image_button_height"
            android:layout_height="@dimen/image_button_height"
            android:layout_marginTop="@dimen/linear_vertical_margin"
            android:layout_weight="1"
            android:contentDescription="@string/throw_dice"
            android:src="@drawable/dice_1_vector_animation" />

        <ImageView
            android:id="@+id/diceButtonAnimation6"
            android:layout_width="@dimen/image_button_height"
            android:layout_height="@dimen/image_button_height"
            android:layout_marginTop="@dimen/linear_vertical_margin"
            android:layout_weight="1"
            android:contentDescription="@string/throw_dice"
            android:src="@drawable/dice_1_vector_animation" />

    </LinearLayout>

</LinearLayout>