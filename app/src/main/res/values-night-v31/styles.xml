<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash screen theme -->
    <style name="SplashTheme" parent="SplashTheme.Night.V31" />

    <style name="SplashTheme.Night.V31" parent="SplashTheme.Night">
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/animated_randomix_logo</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/static_branding_image</item>
    </style>

    <!-- System accent theme, only supported on API 31+ -->
    <style name="AppTheme.System" parent="AppTheme">
        <item name="colorAccent">@android:color/system_accent2_400</item>
        <item name="colorPrimary">@android:color/system_accent2_400</item>
        <item name="colorSecondary">@android:color/system_accent2_400</item>
        <item name="colorPrimaryContainer">@android:color/system_accent2_700</item>
        <item name="colorSecondaryContainer">@android:color/system_accent2_700</item>
    </style>

</resources>